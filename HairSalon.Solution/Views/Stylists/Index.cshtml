@{
  Layout = "_Layout";
}

  <body>
  <h1>ALCHEMY SALON</h1>

  @if (@Model.Count == 0)
  {
    <h2>No Stylists have been added yet.</h2>
  }
  <h2>Current Stylists at Alchemy:</h2>
  @foreach (var stylist in Model)
  {
    <h3><a href='/stylists/@stylist.Id'>@stylist.StylistName</a></h3>
  }
  <h4><a href='/stylists/new'>Add a New Stylist</a></h4>

  <h3><form action='/stylists/deleteAll' method="post">
    <button id="delete" class="btn btn-dark" type="submit">Delete all Stylists</button>
  </form></h3>


  </body>
</html>
