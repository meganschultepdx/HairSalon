<h2>Edit Client: @Model["client"].ClientName</h2>

<form action="/stylists/@Model["stylist"].Id/clients/@Model["client"].Id" method="post">

  <label for="newClientName">Enter Name Edit/New Name</label>
  <input type="text" name="newClientName" value="@Model["client"].ClientName">

  <button type="submit">Make Change</button>
</form>

