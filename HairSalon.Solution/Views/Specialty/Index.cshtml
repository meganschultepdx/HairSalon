@{
  Layout = "_Layout";
}

  <body>
  <h1>ALCHEMY SALON</h1>

  @if (@Model.Count == 0)
  {
    <h2>No Specialties have been added yet.</h2>
  }
  <h2>These are the current Hair Care Specialties that Alchemy provides. Click on a specialty to see which of our Stylists offers it.</h2>

  @foreach (var specialty in Model)
  {
    <h3><a href='/specialty/@specialty.Id'>@specialty.Technique</a></h3>
  }
  <h4><a href='/specialty/new'>Add a New Specialty</a></h4>


  </body>
</html>
